@model List<MyPortfolioProject.Models.Internship>
@{
    ViewBag.Title = "InternshipList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Staj Listesi ve İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şirket Adı</th>
        <th>Başlangıç Tarihi</th>
        <th>Bitiş Tarihi</th>
        <th>Pozisyon</th>
        <th>Açıklama</th>
        <th>Referans Adı</th>
        <th>Referans E-Maili</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InternshipID</td>
            <td>@item.CompanyName</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.Position</td>
            <td>@item.Description</td>
            <td>@item.ReferenceName</td>
            <td>@item.ReferenceEmail</td>
            <td><a href="/Internship/DeleteInternship/@item.InternshipID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Internship/UpdateInternship/@item.InternshipID/" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Internship/CreateInternship/" class="btn btn-outline-info">Staj Ekle</a>

