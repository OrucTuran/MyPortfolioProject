@model MyPortfolioProject.Models.Contact

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

@Html.Action("PartialHead", "Default")
<body>
    <!-- Spinner Start -->
    @Html.Action("PartialSpinner", "Default")
    <!-- Spinner End -->
    <!-- Navbar Start -->
    @Html.Action("PartialNavbar", "Default")
    <!-- Navbar End -->
    <!-- Header Start -->
    @Html.Action("PartialHeader", "Default")
    <!-- Header End -->
    <!-- About Start -->
    @Html.Action("PartialAbout", "Default")
    <!-- About End -->
    <!-- Education Start -->
    @Html.Action("PartialEducation", "Default")
    <!-- Education End -->
    <!-- Experience Start -->
    @Html.Action("PartialExperience", "Default")
    <!-- Exparience End -->
    <!-- Skills Start -->
    @Html.Action("PartialSkills", "Default")
    <!-- Skills End -->
    <!-- Service Start -->
    @Html.Action("PartialService", "Default")
    <!-- Service End -->
    <!-- Portfolio Start -->
    @Html.Action("PartialPortfolio", "Default")
    <!-- Portfolio End -->
    <!-- Blog Start -->
    @Html.Action("PartialBlog", "Default")
    <!-- Blog End -->
    <!-- Testimonial Start -->
    @Html.Action("PartialTestimonial", "Default")
    <!-- Testimonial End -->
    <!-- Contact Start -->
    <div class="container-fluid" id="pigraContact">
        <div class="container">
            <div class="row g-0">
                <div class="col-lg-3">
                    <div class="contact-header h-100 bg-dark pt-6 pe-6 pb-6">
                        <div class="text-start d-flex flex-column justify-content-center wow fadeInUp" data-wow-delay="0.1s">
                            <p class="text-white sub-title">Bana Ulaşın</p>
                            <h1 class="display-6 text-white mb-0">Hadi Yeni Bir Projeye Başlayalım!!!</h1>
                        </div>
                    </div>
                </div>
                @*@Html.Action("PartialContactSideBar", "Contact")*@
                <div class="col-lg-9">
                    <div class="contact-content h-100 pt-6 ps-6 pb-6">
                        <div class="bg-light p-4">
                            <div class="row g-5">
                                @Html.Action("PartialContactDetail", "Contact")
                                <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                                    <div>
                                        <form method="post">
                                            <div class="row g-3">
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control border-0" id="NameSurname" name="NameSurname" placeholder="Adınız Soyadınız">
                                                        <label for="name">Adınız Soyadınız</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="email" class="form-control border-0" id="Email" name="Email" placeholder="Email Adresiniz">
                                                        <label for="email">Email Adresiniz</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vv, new { @class = "form-control" })
                                                        <label for="phone">Kategori</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control border-0" id="Subject" name="Subject" placeholder="Mesaj Konusu">
                                                        <label for="project">Mesaj Konusu</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <textarea class="form-control border-0" placeholder="Mesajınızı Yazın" id="message" name="MessageContent" style="height: 120px"></textarea>
                                                        <label for="message">Mesajınız</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-primary w-100 py-3">Mesajı Gönder</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                @Html.Action("PartialContactLocation", "Contact")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
    <!-- Footer Start -->
    @Html.Action("PartialFooter", "Default")
    <!-- Footer End -->
    <!-- JavaScript Libraries -->
    @Html.Action("PartialScript", "Default")
</body>
</html>