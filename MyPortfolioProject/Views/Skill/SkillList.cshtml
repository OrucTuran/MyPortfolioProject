﻿@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<MyPortfolioProject.Models.Skill>

@{
    ViewBag.Title = "SkillList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Yetenek Listesi ve İşlemleri</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Değer</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillID</td>
            <td>@item.SkillName</td>
            <td>@item.Rate</td>
            <td><a href="/Skill/DeleteSkill/@item.SkillID/" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Skill/UpdateSkill/@item.SkillID/" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }


</table>

@Html.PagedListPager(Model, page => Url.Action("SkillList", new { page }))
<style>
    .pagination {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a, .pagination li span {
                display: block;
                padding: 8px 16px;
                border: 1px solid #ddd;
                text-decoration: none;
                color: #333;
            }

                .pagination li a:hover {
                    background-color: #f2f2f2;
                    border-color: #333;
                }

            .pagination li.active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled span {
                color: #ccc;
            }

</style>
<a href="/Skill/CreateSkill/" class="btn btn-outline-info">Yetenek Ekle</a>
